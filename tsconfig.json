{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "strict": false,
        "baseUrl": "./server",
        "outDir": "./build",
        "sourceMap": false,
        "removeComments": true,
        "experimentalDecorators": true,
        "target": "es6",
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "server/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
